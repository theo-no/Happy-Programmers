<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--dunggeunmo black 24-->
    <style name="Theme.AppCompat.TextView.dunggeunmo.black.Size24" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="fontFamily">@font/dunggeunmo</item>
    </style>

    <!--dunggeunmo black 16-->
    <style name="Theme.AppCompat.TextView.dunggeunmo.black.Size16" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="fontFamily">@font/dunggeunmo</item>
    </style>

    <!--dunggeunmo black 12-->
    <style name="Theme.AppCompat.TextView.dunggeunmo.black.Size12" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/dunggeunmo</item>
    </style>

    <!--dunggeunmo white 32-->
    <style name="Theme.AppCompat.TextView.dunggeunmo.white.Size24" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="fontFamily">@font/dunggeunmo</item>
    </style>


    <!--chip style-->
    <style name="MyTabLayoutStyle" parent="@style/Widget.Material3.TabLayout">
        <item name="tabTextColor">@color/gray_alpha60</item>
        <item name="tabSelectedTextColor">@color/main_blue</item>
        <item name="tabTextAppearance">@style/Theme.AppCompat.TextView.dunggeunmo.black.Size16</item>
        <!--밑줄 없애고 배경에 대해서 관여하고 싶으면 android:background를 override 해서 설정해야 한다.-->
        <item name="android:background">@color/transparent</item>
        <item name="tabIndicatorColor">@color/main_blue</item>
        <item name="tabIndicatorHeight">@dimen/_1sdp</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabRippleColor">@color/transparent</item>
        <item name="tabMode">fixed</item>
    </style>

</resources>