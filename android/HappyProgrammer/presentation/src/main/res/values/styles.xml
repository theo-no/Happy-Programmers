        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="fontFamily">@font/dunggeunmo</item>
    </style>


    <!--chip style-->
    <style name="MyTabLayoutStyle" parent="@style/Widget.Material3.TabLayout">
        <item name="tabTextColor">@color/gray_alpha60</item>
        <item name="tabSelectedTextColor">@color/main_blue</item>
        <item name="tabTextAppearance">@style/Theme.AppCompat.TextView.dunggeunmo.black.Size16</item>
        <!--밑줄 없애고 배경에 대해서 관여하고 싶으면 android:background를 override 해서 설정해야 한다.-->
        <item name="android:background">@color/transparent</item>
        <item name="tabIndicatorColor">@color/main_blue</item>
        <item name="tabIndicatorHeight">@dimen/_1sdp</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabRippleColor">@color/transparent</item>
        <item name="tabMode">fixed</item>
    </style>


    <!--dialog animation-->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/scale_up</item>
        <item name="android:windowExitAnimation">@anim/scale_down</item>
    </style>

    <!--dialogFragment-->
    <style name="FullScreenDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <!--chip style-->
    <style name="MyChipStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <!-- 원하는 속성들을 추가/변경할 수 있습니다 -->
        <item name="android:textColor">@color/selector_chip</item>
        <item name="rippleColor">@color/main_pink</item>
        <!-- 원하는 다른 속성들 ... -->
        <item name="android:textAppearance">@style/Theme.AppCompat.TextView.dunggeunmo.gray.Size12</item>
    </style>

    <!--tab style-->
    <style name="MySmallTabStyle" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/gray_alpha60</item>
        <item name="tabSelectedTextColor">@color/main_blue</item>
        <item name="tabTextAppearance">@style/Theme.AppCompat.TextView.dunggeunmo.black.Size12</item>
        <!--밑줄 없애고 배경에 대해서 관여하고 싶으면 android:background를 override 해서 설정해야 한다.-->
        <item name="android:background">@color/transparent</item>
        <item name="tabIndicatorColor">@color/main_blue</item>
        <item name="tabIndicatorHeight">@dimen/_1sdp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabRippleColor">@color/transparent</item>
        <item name="tabMode">fixed</item>
    </style>




</resources>